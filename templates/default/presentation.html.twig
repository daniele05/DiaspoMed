                <div class="carousel-item">
                    <img src="{{ asset('assets/images/galerie/img_galerie3.jpg') }}" class="img-thumbnail d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('assets/images/galerie/equipe3.jpg') }}" class="img-thumbnail d-block w-100" alt="...">
