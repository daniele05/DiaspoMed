{% extends "base.html.twig" %}

{% block title %} ici ma Page d'accueil{% endblock %}

{% block body %}
    <!--Section Header-->
    <div class="container">
        <!--Jumbotron-->
        <div class="row">
            <div class="jumbotron col-7 mr-lg-5 mr-5">
                <h1 class="display-5 text-info">Umla</h1>
                {% if app.user %}
                    <h3>Bonjour{{ app.user.lastName }},<br></h3>
                {% endif %}
                <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
                <hr class="my-4">
                <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
                <p class="lead">
                    <a class="btn btn-info btn-lg" href="{{ path('app_default_presentation') }}" role="button">En savoir plus</a>
                </p>
            </div>
            <!--Caroussel-->
            <div id="carouselExampleIndicators" class="carousel slide col-sm-4 mt-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{ asset('assets/images/Browser.png') }}" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('assets/images/imag2.jpg') }}" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('assets/images/imag2.jpg') }}" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Précédent</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Suivant</span>
                </a>
            </div>
        </div>
    </div>


    <!--Section Cards nos services-->
    <div class="container-services m-4">
        <div class="overlay">
            <div class="row ">
                <div class="col-3">

                    <div class="p-2 mb-2"></div>
                </div>
                <div class="col-4">
                    <div class="p-2 mb-2">
                        <h3 class="service text-center">Nos Services</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row  m-3">
                <div class="col-sm text-center">
                    <div class="card h-100 border-2 border-info">
                        <img class="card-img-top" src="{{ asset('assets/images/specialites.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Spécialités</h5>
                            <a href="#" class="btn btn-info">Encore + </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm text-center">
                    <div class="card h-100 border-2 border-info" >
                        <img class="card-img-top" src="{{ asset('assets/images/Doct. Alex.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Médécins</h5>
                            <a href="#" class="btn btn-info">Encore + </a>

                        </div>
                    </div>
                </div>
                <div class="col-sm text-center">
                    <div class="card h-100 mb-5 border-2 border-info">
                        <img class="card-img-top" src="{{ asset('assets/images/Doct. Harold.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Vidéo Consultation</h5>
                            <a href="#" class="btn btn-info">Encore + </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm text-center">
                    <div class="card h-100 border-2 border-info">
                        <img class="card-img-top" src="{{ asset('assets/images/medicaments.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Posologie médicaments</h5>
                            <a href="#" class="btn btn-info align-content-center">Encore + </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



    <!--Section Posts-->

    <div class="container-posts m-4">
        <div class="overlay">
            <div class="row ">
                <div class="col-3">

                    <div class="p-2 mb-2"></div>
                </div>
                <div class="col-4">
                    <div class="p-2 mb-2">
                        <h3 class="service text-center">Posts</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row  m-5">
                <div class="col-sm mb-5">
                    <div class="card h-100  border-2 ml-2 border-info w-50 ">
                        <img class="card-img-fluid squelette mb-5-" src="{{ asset('assets/images/squelleteUmla.jpg') }}" alt="squellete">
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card h-100  border-2  border-info w-75 ">
                        <img class="card-img-fluid femme mt-2" src="{{ asset('assets/images/femme-noire.png') }}" alt="femme">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--section sondage-->
    <div class="container-sondage m-4">
        <div class="row">
            <div class="col-7 sondage ml-5">
                <img class="card-img-fluid w-50" src="{{ asset('assets/images/cadresondage.png') }}" alt="apps">
            </div>
            <div class="col-md-3 application">
                <div class=" application">
                    <img class="card-img-fluid w-50" src="{{ asset('assets/images/Frame 2608828.png') }}" alt="apps">
                </div>
            </div>

            <div class="col-2 downloadUmla-container mr-5">
                <div class=" downloadUmla p-2 mb-2">
                    <h3 class="downloadUmla text-light p-2 ">Download The Umla's App</h3>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
