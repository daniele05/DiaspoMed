{% extends 'base.html.twig' %}

{% block title %}Ici ma Page Profile {% endblock %}
{% block body %}
<div class="grid xs1 sm2">
    <div class="grid xs3">
        <div class="col-xs3"><img src="{{ asset('assets/images/ekonda.jpg') }}" alt="ekonda"></div>
        <div>
            <h4>Mes informations</h4>
            <form method="post">
                <label for="username">Nom d'utilisateur:</label>
                <input type="text" id="username" name="firstname" value="{{ user.firstname }}" required>
                <input type="text" id="userlastname" name="lastname" value="{{ user.lastname }}" required>

                <label for="email">email:</label>
                <input type="email" id="email" name="email" value="{{ user.email }}" required>

            </form>
        </div>
        <div class="appointments">
            <h2>Mes rendez-vous</h2>

            <div class="appointments-past">
                <h2>Rendez-vous pass√©s</h2>
                <ul>
                    {% for appointment in pastAppointments %}
                        <li>{{ appointment.date|date('d/m/Y') }} - {{ appointment.time|date('H:i') }} -{{ appointment.doctor }}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="appointments-futurs">
                <h2>Rendez-vous futurs</h2>
                <ul>
                    {% for appointment in futureAppointments %}
                        <li>{{ appointment.date|date('d/m/Y') }} - {{ appointment.time|date('H:i') }} - {{ appointment.doctor }}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="appointments-now">
                <h2>Rendez-vous du jour</h2>
                <ul>
                    {% for appointment in currentAppointments %}
                        <li>{{ appointment.date|date('d/m/Y') }} - {{ appointment.time|date('H:i') }} - {{ appointment.doctor }}</li>
                    {% endfor %}
                </ul>
            </div>

        </div>
        <div>
            <h4>Mes documents</h4>
        </div>
    </div>
<main>
    <!-- Code here the main content -->
    <button data-target="example-sidenav"
            class="btn rounded-1 press amaranth dark-1 hide-md-up">
        Open sidenav
    </button>
</main>

<script src="https://cdn.jsdelivr.net/npm/axentix@2.4.0/dist/axentix.min.js"></script>
{% block javascript %}{% endblock %}
<script>var sidenav= new Sidenav('#example-sidenav');</script>

{% endblock %}



